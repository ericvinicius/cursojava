abstract public class Conta {

	private double saldo;

	public void deposita(double valor) {
		if(valor < 0){
			throw new IllegalArgumentException();
		} else{
			this.saldo += valor;
		}
	}

	public void atualiza(double taxa) {
		this.saldo += this.saldo * taxa;
	}

	public double getSaldo() {
		return saldo;
	}

}